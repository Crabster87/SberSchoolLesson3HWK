<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ActivityBySimpleLink">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="YOU CALLED THIS ACTIVITY BY SIMPLE LINK!!!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/the_activity_sent"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/simple_link_result1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:textAlignment="center"
        android:textColor="#B00020"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/simple_link_image1"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@id/simple_link_result1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/simple_link_result2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/simple_link_image1"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="#B00020"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/simple_link_image2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@id/simple_link_result2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/as_singleTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simple_link_image2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:text="Launch again"
        android:textColor="@color/black" />

</RelativeLayout>